<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rickhutten.npuzzle" >

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name_no_number"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name_no_number"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.SETTING" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GameActivity"
            android:label="@string/app_name_no_number"
            android:icon="@null"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.GAME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ChangeDifficultyActivity"
            android:label="@string/app_name_no_number"
            android:theme="@style/DialogTheme" >
            <intent-filter>
                <action android:name="android.intent.action.DIFFICULTY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SolutionActivity"
            android:label="@string/app_name_no_number"
            android:theme="@style/DialogTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SOLUTION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".WinActivity"
            android:label="@string/app_name_no_number" >
            <intent-filter>
                <action android:name="android.intent.action.WIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
